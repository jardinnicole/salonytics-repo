@using Microsoft.AspNetCore.Mvc.ViewFeatures
@using Microsoft.AspNetCore.Identity

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Salon by Marian Libiran</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - salonytics</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.9.0/main.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

     <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="icon" href="~/images/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <script src="~/js/user_script.js"></script>
    <link href="~/css/user_design.css" rel="stylesheet" />
    <style>
        html, body {
            font-family: "Poppins", sans-serif;
            font-weight: 300;
            font-style: normal;
        }

        .floating-box {
            font-family: "Poppins", sans-serif;
        }
    </style>
</head>

<body>
    <header>
        <a asp-action="UserDashboard" asp-controller="User" id="logoLink">
            <img src="~/images/logosalon.png" alt="Logo" id="logo">
        </a>
        <img src="~/images/header_banner.png" class="header-image" id="image1">
        <div class="header-color" id="headerColor"></div>
        <div class="header-container">
            <div class="icons">
                <a asp-action="UserLocation" asp-controller="User" data-label="Locations"><img src="~/images/locicon.png" alt="location"></a>
                <a href="user_notification.html" data-label="Notifications"><img src="~/images/bellicon.png" alt="notif"></a>
                <a href="user_profile.html" data-label="Profile"><img src="~/images/usericon.png" alt="user"></a>
            </div>
        </div>
        <div class="side-icons">
            <a asp-action="Appointments" asp-controller="User" data-label="My Appointments"><img src="~/images/calendaricon.png" alt="My Appointments"></a>
            <a asp-action="History" asp-controller="User" data-label="History"><img src="~/images/historyicon.png" alt="History"></a>
        </div>
    </header>

   <main>
    @RenderBody()
       
    </main>

    <footer class="custom-footer">
        <div class="footer-content">
            <a asp-action="UserDashboard" asp-controller="User" class="footer-logo-container">
                <img src="~/images/footerlogo.png" alt="Salon Logo" class="footer-logo">
            </a>

            <div class="footer-description">
                <div class="footer-slogan">
                    <h1><em>"Where your crowning glory is at best care"</em></h1>
                </div>
                <p>
                    Welcome to The Salon by Marian Libiran, where your crowning glory receives the best care.
                    With a passion for beauty and a commitment to excellence, we offer a range of top-tier salon services designed to enhance your natural beauty.
                    Our skilled professionals are dedicated to providing a personalized experience in a luxurious and relaxing environment.
                    At The Salon by Marian Libiran, we believe in making every visit a transformative and uplifting experience.
                    Join us and discover why we are the destination for those who seek the best in hair care and styling.
                </p>
            </div>
        </div>

        <div class="footer-social-icons">
            <a href="mailto:libiran.marian0722@gmail.com" target="_blank">
                <i class="fa fa-envelope"></i>
            </a>
            <a href="https://www.facebook.com/profile.php?id=100064731847149" target="_blank">
                <i class="fab fa-facebook"></i>
            </a>
            <a href="https://www.tiktok.com/tsbmarianlibiran020818" target="_blank">
                <i class="fab fa-tiktok"></i>
            </a>
            <a href="https://www.instagram.com/mrnlbrn" target="_blank">
                <i class="fab fa-instagram"></i>
            </a>
        </div>
    </footer>

    <!-- Core JS Files -->
    <script src="~/js/core/jquery.min.js"></script>
    <script src="~/js/core/popper.min.js"></script>
    <script src="~/js/core/bootstrap.min.js"></script>
    <script src="~/js/plugins/perfect-scrollbar.jquery.min.js"></script>

    <!-- Paper Dashboard 2 JS -->
    <script src="~/js/paper-dashboard.min.js?v=2.0.1"></script>


    <!-- jQuery UI -->
    <script src="https://code.jquery.com/ui/1.13.3/jquery-ui.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.9.0/main.min.js"></script>
    <script src="~/js/sample.js"></script>

    <script src="user_script.js"></script>
    <script src="https://cdn.botpress.cloud/webchat/v2.1/inject.js"></script>
    <script src="https://mediafiles.botpress.cloud/a18627b1-7cea-4f6c-9cf8-e46117a8c79e/webchat/v2.1/config.js"></script>

</body>

</html>

@await RenderSectionAsync("Scripts", required: false)
@await RenderSectionAsync("Styles", required: false)

