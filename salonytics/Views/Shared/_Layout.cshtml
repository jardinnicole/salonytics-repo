@using Microsoft.AspNetCore.Mvc.ViewFeatures
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - salonytics</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.9.0/main.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- Paper Dashboard 2 CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/paper-dashboard.css?v=2.0.1" rel="stylesheet" />
    <!-- Demo CSS - Remove this in your production -->
</head>

<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="#" class="simple-text logo-normal bold">
                        <img src="~/images/logolight.png" alt="logo" style="width: auto%; height: 30px;"  />
                    </a>
                </div>
                <ul class="nav">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AdminDashboard">
                                    <i class="nc-icon nc-layout-11"></i>
                                    <p>Dashboard</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Appointment" asp-action="Appointments">
                                    <i class="nc-icon nc-calendar-60"></i>
                                    <p>Calendar</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Appointment" asp-action="Index">
                                    <i class="nc-icon nc-bullet-list-67"></i>
                                    <p>Appointments</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Transaction" asp-action="Index">
                                    <i class="nc-icon nc-credit-card"></i>
                                    <p>Transactions</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Appointment" asp-action="HomeServiceAvailability">
                                    <i class="nc-icon nc-delivery-fast"></i>
                                    <p>Home Service Dates</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Stylist" asp-action="Index">
                                    <i class="nc-icon nc-badge"></i>
                                    <p>Stylists</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="CustomerInfo">
                                    <i class="nc-icon nc-single-02"></i>
                                    <p>Customers</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Branch" asp-action="Index">
                                    <i class="nc-icon nc-shop"></i>
                                    <p>Branches</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="DataReports">
                                    <i class="nc-icon nc-chart-bar-32"></i>
                                    <p>Data Reports</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Sales" asp-action="Summary">
                                    <i class="nc-icon nc-money-coins"></i>
                                    <p>Sales Report</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Inventory" asp-action="Index">
                                    <i class="nc-icon nc-box-2"></i>
                                    <p>Inventory</p>
                                </a>
                            </li>
                        }
                        else if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="UserDashboard">
                                    <i class="nc-icon nc-diamond"></i>
                                    <p>Dashboard</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Appointment" asp-action="ViewAppointments">
                                    <i class="nc-icon nc-calendar-60"></i>
                                    <p>Appointments</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="User" asp-action="StylistList">
                                    <i class="nc-icon nc-badge"></i>
                                    <p>Rate Stylists</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Transactions" asp-action="UserTransactions">
                                    <i class="nc-icon nc-money-coins"></i>
                                    <p>Transactions</p>
                                </a>
                            </li>
                        }
                        else if (User.IsInRole("Stylist"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="StylistDashboard">
                                    <i class="nc-icon nc-pin-3"></i>
                                    <p>Dashboard</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Schedule" asp-action="ViewDailySchedule">
                                    <i class="nc-icon nc-calendar-60"></i>
                                    <p>View Daily Schedule</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Stylist" asp-action="StylistAppointment">
                                    <i class="nc-icon nc-calendar-60"></i>
                                    <p>My Appointments</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Stylist" asp-action="StylistTransaction">
                                    <i class="nc-icon nc-money-coins"></i>
                                    <p>Transactions</p>
                                </a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
        <!-- End Sidebar -->
        <!-- Main Panel -->
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <a class="navbar-brand">@ViewData["Title"]</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                    </button>


                    <div class="collapse navbar-collapse justify-content-end">
                        @if (User.IsInRole("User"))
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item btn-rotate dropdown">
                                    <div id="notification-container">
                                        <span id="notification-count" class="badge badge-pill badge-danger"></span>
                                    </div>
                                </li>
                            </ul>
                        }

                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <a class="nav-link" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
                                       aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-user"></i> @User.Identity.Name
                                    </a>

                                    <div class="dropdown-menu dropdown-menu-right"
                                         aria-labelledby="navbarDropdownMenuLink">
                                        <a class="dropdown-item" asp-area="" asp-controller="Account"
                                           asp-action="ChangePassword">Change Password</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="#" id="logoutLink">Logout</a>
                                    </div>
                                </li>
                            </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <!-- Page Content -->
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            <!-- End Page Content -->
        </div>
        <!-- End Main Panel -->
    </div>

    <!-- Logout Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">Logging out...</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to log out?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Core JS Files -->
    <script src="~/js/core/jquery.min.js"></script>
    <script src="~/js/core/popper.min.js"></script>
    <script src="~/js/core/bootstrap.min.js"></script>
    <script src="~/js/plugins/perfect-scrollbar.jquery.min.js"></script>

    <!-- Paper Dashboard 2 JS -->
    <script src="~/js/paper-dashboard.min.js?v=2.0.1"></script>


    <!-- jQuery UI -->
    <script src="https://code.jquery.com/ui/1.13.3/jquery-ui.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.9.0/main.min.js"></script>
    <script src="~/js/sample.js"></script>

    <!-- Logout Modal Script -->
    <script>
        $(document).ready(function () {
            $('#logoutLink').on('click', function (e) {
                e.preventDefault();
                $('#logoutModal').modal('show');
            });
        });

        function fetchNotifications() {
            $.ajax({
                url: '/Header/GetNotifications',
                method: 'GET',
                success: function (data) {
                    if (data.length > 0) {
                        $('#notification-count').text(data.length);

                        // Display each notification in a list or modal
                        var notificationsHtml = '';
                        data.forEach(function (notification) {
                            notificationsHtml += `<li>Appointment with ${notification.FullName} at ${notification.StartTime}</li>`;
                        });
                        $('#notification-list').html(notificationsHtml);
                    } else {
                        $('#notification-count').text('');
                    }
                }
            });
        }

        // Fetch notifications when the page loads and periodically every minute
        $(document).ready(function () {
            fetchNotifications();
            setInterval(fetchNotifications, 60000); // Refresh every 60 seconds
        });
    </script>

</body>

</html>

@await RenderSectionAsync("Scripts", required: false)
@await RenderSectionAsync("Styles", required: false)



