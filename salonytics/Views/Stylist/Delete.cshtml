@model salonytics.Models.Entities.Stylist

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Stylist ID: @Model.StylistId</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name:</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name:</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Email Address:</dt>
        <dd class="col-sm-10">@Model.EmailAddress</dd>

        <dt class="col-sm-2">Branch:</dt>
        <dd class="col-sm-10">@Model.Branch.BranchName</dd>

        <dt class="col-sm-2">Position:</dt>
        <dd class="col-sm-10">@Model.Position</dd>

        <dt class="col-sm-2">Average Rating:</dt>
        <dd class="col-sm-10">@Model.AverageRating</dd>

        <dt class="col-sm-2">Total Sales:</dt>
        <dd class="col-sm-10">@Model.TotalSales</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="StylistId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

@section Scripts {
    <script>
        // JavaScript to fetch branch name using branch ID
        var branches = @Html.Raw(Json.Serialize(ViewData["Branches"]));
        var branchId = '@Model.BranchId';
        var branchName = branches.find(b => b.value === branchId).text;
        document.querySelector('dd[data-branch]').innerText = branchName;
    </script>
}
