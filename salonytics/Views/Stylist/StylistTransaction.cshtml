@model salonytics.Models.StylistTransactionViewModel

@{
    ViewData["Title"] = "Stylist Transactions";
}

<h2>My Transactions | @Model.StylistName</h2>

<h3>Today's sale: @Model.PaymentAmount.ToString("C")</h3>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Transaction ID</th>
            <th>Customer Name</th>
            <th>Service</th>
            <th>Appointment Date</th>
            <th>Status</th>
            <th>TotalPrice</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model.DoneAppointments)
        {
            <tr>
                <td>@appointment.AppointmentId</td>
                <td>@appointment.FullName</td>
                <td>@appointment.Service?.Name</td>
                <td>@appointment.Date.ToString("yyyy-MM-dd")</td>
                <td>@appointment.AppointmentStatus</td>
                <td>@appointment.TotalPrice.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>


