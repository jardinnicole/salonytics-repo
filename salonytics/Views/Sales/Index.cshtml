@model List<salonytics.Models.Entities.Sale>

@{
    ViewData["Title"] = "Sales Report";
}

<h2>Sales Report</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Service</th>
            <th>Cost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>@sale.Date.ToShortDateString()</td>
                <td>@sale.Service</td>
                <td>@sale.Cost</td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Summary">View Summary</a>
</p>
